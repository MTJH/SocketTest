<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textViewServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:text="@string/server_label" />

    <EditText
        android:id="@+id/editTextServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewServer"
        android:layout_alignBottom="@+id/textViewServer"
        android:layout_alignRight="@layout/activity_main"
        android:layout_marginLeft="34dp"
        android:layout_toRightOf="@+id/textViewServer"
        android:inputType="text"
        android:ems="10"
        android:text="@string/server_address_default" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextServer"
        android:layout_below="@+id/editTextServer"
        android:layout_marginTop="16dp"
        android:text="@string/connect" />

</RelativeLayout>